<UserControl x:Class="SakuraWPF.UserControls.Properties.FloatSet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SakuraWPF.UserControls.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200" VerticalAlignment="Stretch" Height="35">
    <Grid  Background="#FF232323" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="35">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0"
                   x:Name="ParamName" TextWrapping="Wrap" Foreground="#FFD1D1D1" FontSize="12" Text="FloatParamName" VerticalAlignment="Bottom" />
        <TextBox Margin="0,0,4,0" TextWrapping="Wrap" x:Name ="ValueBox"
                 Text="0.25" VerticalAlignment="Bottom" FlowDirection="RightToLeft" FontSize="13" VerticalContentAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</UserControl>
